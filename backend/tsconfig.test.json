{
  "compilerOptions": {
    "outDir": "./dist",
    "lib": [
      "es5",
      "es6",
      "DOM"
    ],
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "esModuleInterop": true
  },
  "include": [
    "./test/**/*",
  ],
  "typeRoots": [
    "./node_modules/@types",
    "./src/types"
  ]
}